        <option value="Rome en Caramel ">Rome en Caramel</option>
        <option value="Pisa Smoothie">Pisa Smoothie</option>
      </select>
      <h3>Choose Size</h3>
      <select id= "size" name="size">
        <option value="Short">Short</option>
        <option value="Tall">Tall</option>
        <option value="Grande">Grande</option>
        <option value="Venti">Venti</option>
      </select>
      <h3>Add a tastey treat</h3>
      <select id= "treat" name="treat">
        <option value="Cinnamon">Amore Crumb</option>
        <option value="Pop">Caio</option>
